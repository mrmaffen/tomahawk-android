<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="2dip"
              android:paddingTop="2dip"
              android:paddingLeft="2dip"
              android:background="@drawable/selectable_background_tomahawk"
              android:descendantFocusability="blocksDescendants">

    <org.tomahawk.tomahawk_android.SquareWidthRelativeLayout
            android:layout_width="44dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

        <ImageView
                android:id="@+id/double_line_list_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
    </org.tomahawk.tomahawk_android.SquareWidthRelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:paddingLeft="10dip">

        <TextView
                android:id="@+id/double_line_list_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/double_line_list_textview2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="6pt"/>

            <TextView
                    android:id="@+id/double_line_list_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="6pt"/>
        </LinearLayout>

    </LinearLayout>

    <org.tomahawk.tomahawk_android.SquareWidthRelativeLayout
            android:layout_width="44dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:visibility="gone">

        <ImageView
                android:id="@+id/double_line_list_imageview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dip"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
    </org.tomahawk.tomahawk_android.SquareWidthRelativeLayout>
</LinearLayout>