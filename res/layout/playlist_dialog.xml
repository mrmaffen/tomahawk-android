<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/playlist_dialog_title_textview"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:textColor="@color/tomahawk_red"
            android:gravity="center_vertical"></TextView>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tomahawk_red"/>

    <EditText
            android:id="@+id/playlist_dialog_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:hint="@string/playbackactivity_playlist_dialog_name_hint"/>

</LinearLayout>